---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get all help articles
const helpArticles = await getCollection('help');

// Sort by views (popularity)
const popularArticles = [...helpArticles]
  .sort((a, b) => (b.data.views || 0) - (a.data.views || 0))
  .slice(0, 5);

// Group by category
const categories: Record<string, typeof helpArticles> = {};
helpArticles.forEach(article => {
  const category = article.data.category;
  if (!Object.prototype.hasOwnProperty.call(categories, category)) {
    categories[category] = [];
  }
  categories[category].push(article);
});

// Get unique tags
const allTags = [...new Set(helpArticles.flatMap(article => article.data.tags || []))]; 

// Get category icons
function getIcon(categoryName: string): string {
  const icons: Record<string, string> = {
    "Getting Started": "M13 10V3L4 14h7v7l9-11h-7z",
    "Account Management": "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
    "Chatbot Configuration": "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z",
    "Analytics & Reporting": "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    "Troubleshooting": "M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    "API & Developers": "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
  };
  return icons[categoryName] || icons["Troubleshooting"];
}

// Handle search query
const query = Astro.url.searchParams.get('q')?.toLowerCase() || '';
let searchResults: typeof helpArticles = [];

if (query) {
  searchResults = helpArticles.filter(article => {
    const titleMatch = article.data.title.toLowerCase().includes(query);
    const descMatch = article.data.description.toLowerCase().includes(query);
    const tagMatch = article.data.tags?.some(tag => tag.toLowerCase().includes(query)) || false;
    return titleMatch || descMatch || tagMatch;
  });
}
---

<Layout title="Help Center - CSMatic" description="Find answers to your questions and learn how to get the most out of CSMatic's AI chatbot platform.">
  <Header />
  
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-16 bg-gradient-to-br from-white to-blue-50">
      <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
        <div class="text-center mb-12">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            How can we help you?
          </h1>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
            Find answers to your questions and learn how to get the most out of CSMatic
          </p>
          
          <!-- Search Bar -->
          <div class="max-w-2xl mx-auto">
            <form action="/help" method="get">
              <div class="relative group">
                <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-400/20 to-primary-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
                <input 
                  type="text" 
                  name="q"
                  value={query}
                  placeholder="Search for help articles..."
                  class="relative w-full px-4 py-3 bg-white/90 backdrop-blur-md border border-gray-200/60 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-100 outline-none text-base"
                />
                <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-primary-500 text-white p-2 rounded-lg hover:bg-primary-600 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    
    {query ? (
      <!-- Search Results -->
      <section class="py-12 bg-white">
        <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
          <h2 class="text-xl font-bold text-gray-900 mb-6">Search Results for "{query}"</h2>
          {searchResults.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {searchResults.map((article) => (
                <a href={`/help/${article.slug}`} class="group relative overflow-hidden">
                  <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-400/20 to-primary-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
                  <div class="relative bg-white/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-4 hover:border-primary-300 transition-all duration-300">
                    <div class="flex items-start justify-between mb-3">
                      <h3 class="text-base font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                        {article.data.title}
                      </h3>
                      <svg class="w-4 h-4 text-gray-400 group-hover:text-primary-500 transition-colors flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                    <p class="text-sm text-gray-600 mb-3">{article.data.description}</p>
                    <div class="flex items-center text-sm text-gray-500">
                      <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded-full text-xs">
                        {article.data.category}
                      </span>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          ) : (
            <div class="text-center py-8">
              <p class="text-gray-600 mb-4">No results found for "{query}"</p>
              <p class="text-gray-500 text-sm">Try using different keywords or browse by category below</p>
            </div>
          )}
        </div>
      </section>
    ) : (
      <!-- Popular Articles -->
      <section class="py-12 bg-white">
        <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
          <h2 class="text-xl font-bold text-gray-900 mb-6">Popular Articles</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {popularArticles.map((article) => (
              <a href={`/help/${article.slug}`} class="group relative overflow-hidden">
                <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-400/20 to-primary-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
                <div class="relative bg-white/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-4 hover:border-primary-300 transition-all duration-300">
                  <div class="flex items-start justify-between mb-3">
                    <h3 class="text-base font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                      {article.data.title}
                    </h3>
                    <svg class="w-4 h-4 text-gray-400 group-hover:text-primary-500 transition-colors flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-3 h-3 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    {article.data.views?.toLocaleString() || '0'} views
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- Help Categories -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Browse by Category</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {Object.entries(categories).map(([categoryName, articles]) => (
            <div class="group relative overflow-hidden">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-400/20 to-primary-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
              <div class="relative bg-white/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-5 hover:border-primary-300 transition-all duration-300">
                <div class="flex items-center mb-6">
                  <div class="bg-primary-100/80 backdrop-blur-sm p-2 rounded-lg mr-3">
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIcon(categoryName)}></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-bold text-gray-900">{categoryName}</h3>
                </div>
                
                <ul class="space-y-3">
                  {articles.slice(0, 4).map((article) => (
                    <li>
                      <a href={`/help/${article.slug}`} class="text-gray-600 hover:text-primary-600 transition-colors flex items-center group">
                        <svg class="w-3 h-3 mr-3 text-gray-400 group-hover:text-primary-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <span class="text-sm">{article.data.title}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Tags Section -->
    <section class="py-12 bg-white">
      <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
        <h2 class="text-xl font-bold text-gray-900 mb-6">Popular Tags</h2>
        <div class="flex flex-wrap gap-2">
          {allTags.map(tag => (
            <a 
              href={`/help?q=${tag}`}
              class="bg-gray-100 hover:bg-primary-100 text-gray-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Contact Support -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-8 sm:px-12 lg:px-16 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Still need help?</h2>
        <p class="text-lg text-gray-600 mb-6">
          Can't find what you're looking for? Our support team is here to help.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Email Support -->
          <div class="group relative overflow-hidden">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-400/20 to-blue-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
            <div class="relative bg-gray-50/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-5">
              <div class="bg-blue-100/80 backdrop-blur-sm p-2 rounded-lg w-fit mx-auto mb-4">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 mb-2">Email Support</h3>
              <p class="text-gray-600 mb-4 text-sm">Get help via email within 24 hours</p>
              <a href="mailto:support@csmatic.com" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors text-sm">
                Send Email
              </a>
            </div>
          </div>
          
          <!-- Live Chat -->
          <div class="group relative overflow-hidden">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-green-400/20 to-green-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
            <div class="relative bg-gray-50/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-5">
              <div class="bg-green-100/80 backdrop-blur-sm p-2 rounded-lg w-fit mx-auto mb-4">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 mb-2">Live Chat</h3>
              <p class="text-gray-600 mb-4 text-sm">Chat with our support team instantly</p>
              <button class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors text-sm">
                Start Chat
              </button>
            </div>
          </div>
          
          <!-- Phone Support -->
          <div class="group relative overflow-hidden">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-purple-400/20 to-purple-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
            <div class="relative bg-gray-50/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-5">
              <div class="bg-purple-100/80 backdrop-blur-sm p-2 rounded-lg w-fit mx-auto mb-4">
                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 mb-2">Phone Support</h3>
              <p class="text-gray-600 mb-4 text-sm">Call us for immediate assistance</p>
              <a href="tel:+1-555-123-4567" class="bg-purple-500 text-white px-4 py-2 rounded-lg hover:bg-purple-600 transition-colors text-sm">
                Call Now
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>