---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const POSTS_PER_PAGE = 9;

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());

// Get current page from URL params
const currentPage = parseInt(Astro.url.searchParams.get('page') || '1');
const totalPages = Math.ceil(sortedPosts.length / POSTS_PER_PAGE);

// Calculate pagination
const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
const endIndex = startIndex + POSTS_PER_PAGE;
const paginatedPosts = sortedPosts.slice(startIndex, endIndex);
---

<Layout title="Blog - CSMatic" description="Insights, tips, and updates about AI chatbots and customer experience.">
  <Header />
  
  <main class="pt-24">
    <section class="py-16 bg-white">
      <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
        <div class="text-center mb-16">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            CSMatic Blog
          </h1>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Insights, tips, and updates about AI chatbots and customer experience
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {paginatedPosts.map((post) => (
            <article class="group relative overflow-hidden h-[280px]">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-400/20 to-primary-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
              <div class="relative bg-white/90 backdrop-blur-md border border-gray-200/60 rounded-xl overflow-hidden h-full flex flex-col">
                <div class="h-[100px] w-full bg-gradient-to-br from-primary-400 to-primary-600 flex-shrink-0"></div>
                <div class="p-5 flex-grow flex flex-col justify-between">
                  <div>
                    <div class="flex items-center text-sm text-gray-500 mb-3">
                      <time datetime={post.data.publishDate.toISOString()}>
                        {post.data.publishDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                      <span class="mx-2">â€¢</span>
                      <span>{post.data.author}</span>
                    </div>
                    
                    <h2 class="text-base font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                      <a href={`/blog/${post.slug}`}>
                        {post.data.title}
                      </a>
                    </h2>
                  </div>
                  
                  <div>
                    <a 
                      href={`/blog/${post.slug}`}
                      class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors text-sm group"
                    >
                      Read more
                      <svg class="w-3 h-3 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
        
        <!-- Pagination -->
        {totalPages > 1 && (
          <div class="flex justify-center items-center space-x-2 mt-8">
            <!-- Previous Button -->
            {currentPage > 1 && (
              <a 
                href={`/blog?page=${currentPage - 1}`}
                class="px-3 py-2 border border-gray-200/60 rounded-lg text-gray-600 hover:border-primary-300 hover:text-primary-600 transition-colors text-sm"
              >
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </a>
            )}
            
            <!-- Page Numbers -->
            {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
              <a 
                href={`/blog?page=${page}`}
                class={`px-3 py-2 border rounded-lg transition-colors text-sm ${
                  page === currentPage 
                    ? 'border-primary-500/60 bg-primary-500 text-white' 
                    : 'border-gray-200/60 text-gray-600 hover:border-primary-300 hover:text-primary-600'
                }`}
              >
                {page}
              </a>
            ))}
            
            <!-- Next Button -->
            {currentPage < totalPages && (
              <a 
                href={`/blog?page=${currentPage + 1}`}
                class="px-3 py-2 border border-gray-200/60 rounded-lg text-gray-600 hover:border-primary-300 hover:text-primary-600 transition-colors text-sm"
              >
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>