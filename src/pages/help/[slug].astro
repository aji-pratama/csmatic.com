---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const helpArticles = await getCollection('help');
  return helpArticles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await article.render();

// Get related articles (same category)
const allArticles = await getCollection('help');
const relatedArticles = allArticles
  .filter(a => a.data.category === article.data.category && a.slug !== article.slug)
  .slice(0, 3);
---

<Layout title={`${article.data.title} - CSMatic Help`} description={article.data.description}>
  <Header />
  
  <main class="pt-24">
    <article class="py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
          <a href="/help" class="text-primary-600 hover:text-primary-700 flex items-center text-sm font-medium">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Help Center
          </a>
        </div>
        
        <header class="mb-12">
          <div>
            <div class="flex items-center text-sm text-gray-500 mb-4">
              <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">
                {article.data.category}
              </span>
              <span class="mx-2">â€¢</span>
              <time datetime={article.data.publishDate.toISOString()}>
                {article.data.publishDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
            
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              {article.data.title}
            </h1>
            
            <p class="text-xl text-gray-600 mb-8">
              {article.data.description}
            </p>
            
            {article.data.tags && (
              <div class="flex flex-wrap gap-2 mb-8">
                {article.data.tags.map((tag) => (
                  <a 
                    href={`/help?q=${tag}`}
                    class="bg-gray-100 hover:bg-primary-100 text-gray-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-colors"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            )}
          </div>
        </header>
        
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
        
        {relatedArticles.length > 0 && (
          <div class="mt-16 pt-8 border-t border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Articles</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {relatedArticles.map((relatedArticle) => (
                <a href={`/help/${relatedArticle.slug}`} class="group relative overflow-hidden">
                  <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-400/20 to-primary-600/20 rounded-xl opacity-30 group-hover:opacity-50 transition duration-500"></div>
                  <div class="relative bg-white/90 backdrop-blur-md border border-gray-200/60 rounded-xl p-4 hover:border-primary-300 transition-all duration-300">
                    <h3 class="text-base font-semibold text-gray-900 group-hover:text-primary-600 transition-colors mb-2">
                      {relatedArticle.data.title}
                    </h3>
                    <p class="text-sm text-gray-600 line-clamp-2">
                      {relatedArticle.data.description}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
        
        <div class="mt-16 pt-8 border-t border-gray-200">
          <div class="text-center">
            <p class="text-gray-600 mb-6">
              Was this article helpful?
            </p>
            <div class="flex justify-center space-x-4">
              <button class="bg-green-100 text-green-700 px-4 py-2 rounded-lg hover:bg-green-200 transition-colors flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                </svg>
                Yes, it helped
              </button>
              <button class="bg-red-100 text-red-700 px-4 py-2 rounded-lg hover:bg-red-200 transition-colors flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018a2 2 0 01.485.06l3.76.94m-7 10v5a2 2 0 002 2h.095c.5 0 .905-.405.905-.905 0-.714.211-1.412.608-2.006L17 13V4m-7 10h2m5-10h2a2 2 0 012 2v6a2 2 0 01-2 2h-2.5"></path>
                </svg>
                No, I need more help
              </button>
            </div>
          </div>
        </div>
      </div>
    </article>
  </main>
  
  <Footer />
</Layout>

<style>
  .prose {
    @apply text-gray-700;
  }
  .prose h1 {
    @apply text-3xl font-bold text-gray-900 mt-8 mb-4;
  }
  .prose h2 {
    @apply text-2xl font-bold text-gray-900 mt-8 mb-4;
  }
  .prose h3 {
    @apply text-xl font-semibold text-gray-900 mt-6 mb-3;
  }
  .prose p {
    @apply mb-4 leading-relaxed;
  }
  .prose ul {
    @apply mb-4 pl-6;
  }
  .prose ul li {
    @apply mb-2 list-disc;
  }
  .prose ol {
    @apply mb-4 pl-6;
  }
  .prose ol li {
    @apply mb-2 list-decimal;
  }
  .prose a {
    @apply text-primary-600 hover:text-primary-700 font-medium;
  }
  .prose blockquote {
    @apply pl-4 border-l-4 border-gray-200 italic text-gray-600 my-6;
  }
  .prose code {
    @apply bg-gray-100 px-1 py-0.5 rounded text-gray-800 text-sm;
  }
  .prose pre {
    @apply bg-gray-800 text-gray-100 p-4 rounded-lg overflow-x-auto my-6;
  }
  .prose pre code {
    @apply bg-transparent text-inherit p-0;
  }
  .prose img {
    @apply rounded-lg my-6;
  }
  .prose table {
    @apply w-full border-collapse my-6;
  }
  .prose table th {
    @apply bg-gray-100 px-4 py-2 text-left font-semibold border border-gray-200;
  }
  .prose table td {
    @apply px-4 py-2 border border-gray-200;
  }
</style>