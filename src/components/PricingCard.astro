---
export interface Props {
  title: string;
  price: string;
  period: string;
  description: string;
  features: string[];
  isPopular?: boolean;
  ctaText: string;
  ctaLink: string;
}

const { title, price, period, description, features, isPopular = false, ctaText, ctaLink } = Astro.props;
---

<div class={`group relative h-full ${isPopular ? 'scale-105' : ''}`}>
  <div class={`absolute -inset-1 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-500 ${
    isPopular 
      ? 'bg-gradient-to-r from-primary-500 to-purple-600' 
      : 'bg-gradient-to-r from-gray-300 to-gray-400'
  }`}></div>
  
  <div class={`relative bg-white/95 backdrop-blur-sm rounded-2xl p-8 h-full border transition-all duration-300 ${
    isPopular 
      ? 'border-primary-200/50 ring-1 ring-primary-500/20' 
      : 'border-gray-200/50 hover:border-gray-300/50'
  }`}>
    {isPopular && (
      <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
        <span class="bg-gradient-to-r from-primary-500 to-primary-600 text-white px-4 py-1.5 rounded-full text-xs font-semibold backdrop-blur-sm">
          Most Popular
        </span>
      </div>
    )}
    
    <div class="text-center mb-6">
      <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
      <div class="mb-4">
        <span class="text-3xl font-bold text-gray-900">{price}</span>
        <span class="text-gray-600 ml-2 text-base">{period}</span>
      </div>
      <p class="text-gray-600 text-sm">{description}</p>
    </div>
    
    <ul class="space-y-3 mb-6">
      {features.map((feature) => (
        <li class="flex items-start">
          <div class="relative mr-3 mt-1">
            <div class="absolute -inset-1 bg-gradient-to-r from-green-400 to-green-600 rounded-full blur opacity-20"></div>
            <svg class="relative w-4 h-4 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path>
            </svg>
          </div>
          <span class="text-gray-700 text-sm">{feature}</span>
        </li>
      ))}
    </ul>
    
    <div class="relative group/button">
      <div class={`absolute -inset-1 rounded-xl blur opacity-30 group-hover/button:opacity-50 transition duration-300 ${
        isPopular 
          ? 'bg-gradient-to-r from-primary-500 to-primary-600' 
          : 'bg-gradient-to-r from-gray-400 to-gray-500'
      }`}></div>
      <a href={ctaLink} class={`relative block w-full py-3 px-4 rounded-xl font-semibold text-center transition-all duration-200 text-sm ${
        isPopular 
          ? 'bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white border border-primary-500/20' 
          : 'bg-gray-50/80 hover:bg-gray-100/80 text-gray-900 border border-gray-200/50 hover:border-gray-300/50 backdrop-blur-sm'
      }`}>
        {ctaText}
      </a>
    </div>
  </div>
</div>