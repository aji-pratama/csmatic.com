---
export interface Props {
  title: string;
  price: string;
  period: string;
  description: string;
  features: string[];
  isPopular?: boolean;
  ctaText: string;
  ctaLink: string;
}

const { title, price, period, description, features, isPopular = false, ctaText, ctaLink } = Astro.props;
---

<div class={`group relative h-full ${isPopular ? 'scale-105' : ''}`}>
  <div class="relative bg-white rounded-2xl p-8 h-full border transition-all duration-300 flex flex-col justify-between ${isPopular ? 'border-primary-300 border-2' : 'border-gray-300'}">
    {isPopular && (
      <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 whitespace-nowrap">
        <span class="bg-gradient-to-r from-primary-500 to-primary-600 text-white px-4 py-1.5 rounded-full text-xs font-semibold backdrop-blur-sm">
          Most Popular
        </span>
      </div>
    )}
    
    <div>
      <div class="text-center mb-6">
        <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
        <div class="mb-4">
          <span class="text-3xl font-bold text-gray-900">{price}</span>
          <span class="text-gray-600 ml-2 text-base">{period}</span>
        </div>
        <p class="text-gray-600 text-sm">{description}</p>
      </div>
      
      <ul class="space-y-3 mb-6">
        {features.map((feature) => (
          <li class="flex items-start">
            <div class="relative mr-3 mt-1">
              <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-gray-700 text-sm">{feature}</span>
          </li>
        ))}
      </ul>
    </div>
    
    <div class="relative group/button mt-auto">
      <div class={`absolute -inset-1 rounded-xl blur opacity-30 group-hover/button:opacity-50 transition duration-300 ${isPopular ? 'bg-gradient-to-r from-primary-500 to-primary-600' : 'bg-gradient-to-r from-gray-400 to-gray-500'}`}></div>
      <a href={ctaLink} class={`relative block w-full py-3 px-4 rounded-xl font-semibold text-center transition-all duration-200 text-sm ${isPopular ? 'bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white border border-primary-500/20' : 'bg-gray-50/80 hover:bg-gray-100/80 text-gray-900 border border-gray-200/50 hover:border-gray-300/50 backdrop-blur-sm'}`}>
        {ctaText}
      </a>
    </div>
  </div>
</div>