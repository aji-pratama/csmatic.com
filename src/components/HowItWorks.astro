  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const accordions = document.querySelectorAll('#accordion-container details');
      const images = {
        step1: document.getElementById('image-step1'),
        step2: document.getElementById('image-step2'),
        step3: document.getElementById('image-step3'),
        step4: document.getElementById('image-step4')
      };

      function showImage(stepId) {
        Object.values(images).forEach(img => {
          if (img) img.classList.add('hidden');
        });
        
        const imageToShow = images[stepId];
        if (imageToShow) imageToShow.classList.remove('hidden');
      }

      accordions.forEach(accordion => {
        if (accordion.open) {
          showImage(accordion.id);
        }
      });

      accordions.forEach(accordion => {
        accordion.addEventListener('toggle', () => {
          if (accordion.open) {
            accordions.forEach(acc => {
              if (acc !== accordion && acc.open) {
                acc.open = false;
              }
            });
            
            showImage(accordion.id);
          }
        });
      });
    });
  </script>
